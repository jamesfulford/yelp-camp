<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center">Add New Campground</h1>
    <div style="width: 30%; margin: 30px auto;">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="campground[name]" id="name" class="form-control"></input>
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input type="number" name="campground[price]" id="price" class="form-control" min="0.01" step="0.01"></input>
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="text" name="campground[image]" id="image" class="form-control"></input>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea name="campground[description]" id="description" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Add camp</button>
            </div>
        </form>
        <a href="/campgrounds">Back to campgrounds</a>
    </div>
</div>

<% include ../partials/footer %>
