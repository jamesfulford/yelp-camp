<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center">Edit <%= campground.name %></h1>
    <div style="width: 30%; margin: 30px auto;">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="campground[name]" id="name" class="form-control" value="<%= campground.name %>"></input>
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="text" name="campground[image]" id="image" class="form-control" value="<%= campground.image %>"></input>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea name="campground[description]" id="description" class="form-control"><%= campground.description %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Edit camp</button>
            </div>
        </form>
        <a href="/campgrounds/<%= campground._id %>">Back to <%= campground.name %></a>
    </div>
</div>

<% include ../partials/footer %>
