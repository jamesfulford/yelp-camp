<% include partials/header %>

<div class="row">
    <h1 style="text-align: center">Add New Campground</h1>
    <div style="width: 30%; margin: 30px auto;">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" class="form-control"></input>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input type="textarea" name="description" id="description" class="form-control"></input>
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="text" name="image" id="image" class="form-control"></input>
            </div>
            
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Add camp</button>
            </div>
        </form>
        <a href="/campgrounds">Back to campgrounds</a>
    </div>
</div>

<% include partials/footer %>