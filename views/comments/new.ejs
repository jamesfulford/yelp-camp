<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center">Add New Comment to <%= campground.name %></h1>
    <div style="width: 30%; margin: 30px auto;">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <label for="text">Text</label>
                <textarea name="comment[text]" id="text" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label for="author">Author</label>
                <input type="text" name="comment[author]" id="author" class="form-control"></input>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Add comment</button>
            </div>
        </form>
        <a href="/campgrounds">Back to campgrounds</a>
    </div>
</div>

<% include ../partials/footer %>
