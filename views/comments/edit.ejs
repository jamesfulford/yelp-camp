<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center">Edit Comment on <%= campground.name %></h1>
    <div style="width: 30%; margin: 30px auto;">
        <form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="text">Text</label>
                <textarea name="comment[text]" id="text" class="form-control"><%= comment.text %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Edit comment</button>
            </div>
        </form>
        <a href="/campgrounds/<%= campground._id %>">Back to <%= campground.name %></a>
    </div>
</div>

<% include ../partials/footer %>
